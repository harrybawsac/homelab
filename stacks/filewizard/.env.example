# FileWizard Configuration

# Authentication Settings
# Set LOCAL_ONLY=False when using auth/OAuth
LOCAL_ONLY=True
# Set SECRET_KEY when enabling auth (generate with: openssl rand -base64 32)
SECRET_KEY=

# Directory Configuration
UPLOADS_DIR=/app/uploads
PROCESSED_DIR=/app/processed

# Performance Settings
OMP_NUM_THREADS=4
DOWNLOAD_KOKORO_ON_STARTUP=true

# User and Group IDs (run `id` command to find yours)
PUID=1000
PGID=1000

# Timezone
TZ=Europe/Amsterdam

# Web Interface Port
FILEWIZARD_PORT=6969
